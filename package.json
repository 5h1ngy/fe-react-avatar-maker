{
  "name": "fe-react-anime-watch",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A modern React application to track and manage your watched anime. Built with Chakra UI for a sleek and accessible design system, Redux Toolkit for robust state management, and Storybook for component documentation and testing. Developed using TypeScript and Vite for optimal performance and scalability",
  "keywords": [
    "react",
    "anime",
    "anime-tracking",
    "anime-watch",
    "watchlist",
    "chakra-ui",
    "redux-toolkit",
    "vite",
    "storybook",
    "typescript",
    "state-management",
    "modern-ui",
    "frontend",
    "web-application"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/5h1ngy/fe-react-anime-watch.git"
  },
  "author": "5h1ngy",
  "engines": {
    "node": ">=20.18.0",
    "yarn": ">=4.5.1"
  },
  "packageManager": "yarn@4.5.1",
  "type": "module",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "scripts": {
    "mock": "vite --host 0.0.0.0 --port 5173 --mode mock",
    "dev": "vite --host 0.0.0.0 --port 5173 --mode dev",
    "build": "tsc -b && vite build",
    "start": "vite preview",
    "storybook": "storybook dev -p 6006 --no-open",
    "preview": "storybook build",
    "docs": "typedoc",
    "lint": "eslint .",
    "clean": "rm -rfdv dist node_modules"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.2.2",
    "@emotion/react": "^11.13.5",
    "@reduxjs/toolkit": "^2.4.0",
    "@storybook/addon-themes": "^8.4.6",
    "axios": "^1.7.8",
    "dompurify": "^3.2.2",
    "gsap": "^3.12.5",
    "next-themes": "^0.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.3.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^7.0.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^9.16.0",
    "@storybook/addon-essentials": "^8.4.6",
    "@storybook/addon-interactions": "^8.4.6",
    "@storybook/addon-onboarding": "^8.4.6",
    "@storybook/blocks": "^8.4.6",
    "@storybook/react": "^8.4.6",
    "@storybook/react-vite": "^8.4.6",
    "@storybook/test": "^8.4.6",
    "@types/lodash": "^4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-helmet": "^6.1.11",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv": "^16.4.5",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^15.12.0",
    "lodash": "^4.17.21",
    "storybook": "^8.4.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.3"
  }
}
